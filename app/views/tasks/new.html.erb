<% provide(:title, "New Task") %>
<% provide(:btn_title, "新規作成") %>
<h1>タスク新規作成</h1>
<div class="row">
	<div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, url: user_tasks_path(@user), local: true) do |f|  %>
    <%= render 'shared/task_error_msg' %>
    
      <%= f.label :task_name, class: "label-form" %>
      <%= f.text_field :task_name, class: "form-control" %>
      
      <%= f.label :task_description, class: "label-form" %>
      <%= f.text_area :task_description, class: "form-control", rows: "5" %>
      
      <%= f.submit yield(:btn_title), class: "btn btn-lg btn-primary btn-form" %>
    <% end %>
	</div>
</div>
