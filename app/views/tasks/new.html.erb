<% provide(:title, "New Task") %>

<h1>タスク新規作成</h1>
<div class="row">
	<div class="col-md-8 col-md-offset-2">
		<%= form_with model: @task do |f|  %>
		
		<%= f.label :name, class: "label-form" %>
		<%= f.text_field :name, class: "form-control" %>
		
		<%= f.label :task_description, class: "label-form" %>
		<%= f.text_area :task_description, class: "form-control", rows: "5" %>
		
		<%= f.submit "新規作成", class: "btn btn-lg btn-primary btn-form" %>
		<% end %>
	</div>
</div>