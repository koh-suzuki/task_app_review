<% provide(:title, "Edit Task") %>
<% provide(:btn_title, "更新") %>
<h1>タスク編集</h1>

<div class="row">
  
	<div class="col-md-8 col-md-offset-2">
	<%= form_with(model: @task, url: user_task_path(@user, @task), local: true) do |f|  %>
  <%= render 'shared/task_error_msg' %>
    <%= f.label :task_name, class: "label-form" %>
    <%= f.text_field :task_name, class: "form-control" %>
    
    <%= f.label :task_description, class: "label-form" %>
    <%= f.text_area :task_description, class: "form-control", rows: "5" %>
    
    <%= f.submit yield(:btn_title), class: "btn btn-primary btn-form" %>
    <%= link_to "キャンセル", user_tasks_path(@user, @task), class: "btn btn-default btn-form" %>
  <% end %>
	</div>
</div>
