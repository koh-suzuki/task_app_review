<% provide(:title, "Users") %>
<h1>利用者一覧</h1>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= will_paginate @users, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>
    <table class="table table-hover" id="table-tasks">
      <thead>
        <tr>
          <td>名前</td>
        </tr>
      </head>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, user_path(user.id) %></td>
          <td>
            <% if current_user.admin && !(current_user == user) %>
              <%= link_to "削除", user_path(user.id), method: :delete, data:{ confirm: '本当によろしいですか？'}, class: "btn btn-danger btn-sm pull-right" %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @users, :previous_label => ' &lt 前へ', :next_label => '次へ &gt' %>
  </div>    
</div>
