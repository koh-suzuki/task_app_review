<% provide(:title, "Show Task") %>
<h1>タスク詳細</h1>

<div class="row">
	<div class="col-md-10 col-md-offset-1">
	  <table class="table table-bordered">
	    <tbody>
	      <tr>
	        <th class="active col-md-2">id</th>
	        <td><%= @task.id %></td>
	      </tr>
	      <tr>
	        <th class="active">名称</th>
	        <td><%= @task.task_name %></td>
	      </tr>
	      <tr>
	        <th class="active">詳細</th>
	        <td>
	        	<%= Rinku.auto_link(@task.task_description, :all, 'target="_blank"').html_safe %>
	        </td>
	      </tr>
	      <tr>
	        <th class="active">作成日</th>
	        <td><%= l(@task.created_at, format: :long) %></td>
	      </tr>
	      <tr>
	        <th class="active">更新日</th>
	        <td><%= l(@task.updated_at, format: :long) %></td>
	      </tr>
	    </tbody>
	  </table>
	  <div>
      <%= link_to "編集", edit_user_task_path(@user.id, @task.id), class: "btn btn-lg btn-success" %>
      <%= link_to "削除", user_task_path(@user, @task), method: :delete, data:{ confirm: '本当によろしいですか？'}, class: "btn btn-danger btn-lg" %>
	  </div>
  </div>
</div>
